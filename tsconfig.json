{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",  // Esto permite las rutas relativas desde la ra√≠z del proyecto
    "paths": {
      "@/*": ["./src/*"]  // Ajusta el alias @ para apuntar a la carpeta src (ajusta esto si tu estructura es diferente)
    }
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/components/ui/dock.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
